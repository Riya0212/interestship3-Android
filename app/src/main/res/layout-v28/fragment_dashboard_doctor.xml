<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment_Doctor">
    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/id_login"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_margin="@dimen/dp_10"
        android:layout_height="wrap_content">

    </ImageView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
       app:layout_constraintGuide_begin="@dimen/dp_20">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_inner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/dp_10" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dp_20">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/dp_10">

    </androidx.constraintlayout.widget.Guideline>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_350"
        android:translationY="-250dp"
        android:src="@drawable/rectangle"
        android:alpha="0.6"
        android:id="@+id/img_background"
        android:translationZ="-1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/backgroundimage">

    </ImageView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_doctor"
        android:layout_width="90dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="90dp"
        android:src="@drawable/ellipsesampleimage4"
        app:layout_constraintBottom_toTopOf="@id/innercard"
        app:civ_border_color="@color/colorBlue"
        app:civ_border_width="4dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintTop_toTopOf="@id/guide_inner"
        app:layout_constraintStart_toStartOf="@id/guide_start"
         />



    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@id/img_background"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        android:id="@+id/innercard"
        app:cardCornerRadius="@dimen/dp_10"
        android:background="@color/blue3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="@dimen/dp_4"
        android:backgroundTint="@color/blue3"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/innerdetails"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_20"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewName_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sp_20"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="@dimen/dp_5"
                android:text="@string/label_name"
                android:textColor="@color/colorBlue"
                android:textColorHighlight="@color/colorBlue"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                 />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_bg"
                android:textColor="@color/colorBlack"
                android:inputType="textPersonName"
                android:padding="@dimen/sp_5"
                android:textSize="@dimen/sp_12"
                app:layout_constraintTop_toBottomOf="@+id/textViewName_doctor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewPhone_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_phone_number"
                android:textColor="@color/colorBlue"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="@dimen/dp_5"
                android:textColorHighlight="@color/colorBlue"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/sp_5"
                app:layout_constraintTop_toBottomOf="@id/editTextName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_bg"
                android:textColor="@color/colorBlack"
                android:padding="@dimen/sp_5"
                android:inputType="phone"
                android:textSize="@dimen/sp_12"
                app:layout_constraintTop_toBottomOf="@id/textViewPhone_doctor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewGender_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_gender"
                android:textColor="@color/colorBlue"
                android:textColorHighlight="@color/colorBlue"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/sp_5"
                app:layout_constraintTop_toBottomOf="@id/editTextPhone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:background="@drawable/input_bg"
                android:textColor="@color/colorBlack"
                android:inputType="text"
                android:padding="@dimen/sp_5"
                app:layout_constraintTop_toBottomOf="@id/textViewGender_doctor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewSpecialization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/specialization"
                android:textColor="@color/colorBlue"
                android:textColorHighlight="@color/colorBlue"
                android:textSize="@dimen/sp_14"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="@dimen/dp_5"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/sp_5"
                app:layout_constraintTop_toBottomOf="@id/editTextGender"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextBlood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_bg"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_12"
                android:inputType="text"
                android:padding="@dimen/sp_5"
                app:layout_constraintTop_toBottomOf="@id/textViewSpecialization"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewyearsofexp_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/years_of_experience"
                android:textColor="@color/colorBlue"
                android:textColorHighlight="@color/colorBlue"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/sp_5"
                app:layout_constraintTop_toBottomOf="@id/editTextBlood"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:background="@drawable/input_bg"
                android:textColor="@color/colorBlack"
                android:inputType="text"
                android:padding="@dimen/sp_5"
                app:layout_constraintTop_toBottomOf="@id/textViewyearsofexp_doctor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/introduction"
                android:textColor="@color/colorBlue"
                android:textColorHighlight="@color/colorBlue"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="@dimen/dp_5"
                app:layout_constraintTop_toBottomOf="@id/editTextWeight"
                android:layout_marginTop="@dimen/sp_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextintro_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_bg"
                android:textColor="@color/colorBlack"
                android:inputType="text"
                android:textSize="@dimen/sp_12"
                android:padding="@dimen/sp_5"
                app:layout_constraintTop_toBottomOf="@id/textViewHeight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/editTextintro_doctor"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/contactus_submit"
                android:textSize="@dimen/sp_12"
                android:fontFamily="@font/poppinsbold"
                android:textStyle="bold"

                android:background="@drawable/rounded_corner_button"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue1"
                android:layout_height="wrap_content">

            </androidx.appcompat.widget.AppCompatButton>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>




</androidx.constraintlayout.widget.ConstraintLayout>